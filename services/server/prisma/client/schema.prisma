generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  account_id     String           @unique @db.VarChar(20)
  name           String           @db.VarChar(20)
  password       String           @db.Char(60)
  role           Role
  birth          String?
  profile_img    String?
  introduce      Introduce?
  posts          Post[]
  workExperience WorkExperience[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(40)
  content   String
  userId    String
  thumbnail String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [account_id])
}

model WorkExperience {
  name      String
  field     String
  startDate String
  endDate   String?
  userId    String
  id        Int     @id @default(autoincrement())
  User      User    @relation(fields: [userId], references: [account_id])
}

model Introduce {
  id         Int     @id @default(autoincrement())
  content    String
  tag        String?
  technology String
  userId     String  @unique
  User       User    @relation(fields: [userId], references: [account_id])
}

enum Role {
  mento
  menti
}
