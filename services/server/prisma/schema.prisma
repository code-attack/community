generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  account_id     String           @unique @db.VarChar(20)
  name           String           @db.VarChar(20)
  password       String           @db.Char(60)
  role           Role
  birth          String?
  profile_img    String?
  tag            String?
  introduce      Introduce?
  posts          Post[]
  workExperience WorkExperience[]
  technology     Technology[]
  chat Chat[]
  room Room[]
}

model Technology {
  id   Int    @id @default(autoincrement())
  User User[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(40)
  content   String
  userId    String
  thumbnail String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [account_id])
}

model WorkExperience {
  name      String
  field     String
  startDate String
  endDate   String?
  userId    String
  id        Int     @id @default(autoincrement())
  User      User    @relation(fields: [userId], references: [account_id])
}

model Introduce {
  content String
  userId  String @unique
  User    User   @relation(fields: [userId], references: [account_id])
}

model Room {
  id Int @id @default(autoincrement())
  chat Chat[]
  user User[]
}

model Chat {
   id Int @id @default(autoincrement())
   roomId Int @unique
   room Room @relation(fields: [roomId],references: [id])
   userId  String @unique
   User    User   @relation(fields: [userId], references: [account_id])
   msg String
}

enum Role {
  mento
  menti
}
