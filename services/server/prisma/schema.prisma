// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int              @id @default(autoincrement())
  account_id    String           @unique @db.VarChar(20)
  name          String           @db.VarChar(20)
  password      String           @db.Char(60)
  role          String           @db.VarChar(5)
  tag           String?
  technology    Technology[]
  profile_img   String?
  posts         Post[]
  workExperience WorkExperience[]
  introduce     Introduce?
}

model Technology {
  id   Int    @id @default(autoincrement())
  user User[]
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String @db.VarChar(40)
  content   String
  thumbnail String
  user      User   @relation(fields: [userId], references: [account_id])
  userId    String
}

model WorkExperience {
  name      String
  field     String
  startDate String
  endDate   String?
  User      User    @relation(fields: [userId], references: [account_id])
  userId    String  @unique
}

model Introduce {
  content String
  User    User   @relation(fields: [userId], references: [account_id])
  userId  String @unique
}
